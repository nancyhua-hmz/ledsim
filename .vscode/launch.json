    "version": "0.2.0",
    "configurations": [{
        "name": "Launch Go program",
        "type": "go",
        "request": "launch",
        "program": "${workspaceRoot}/cmd/main/main.go",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }, {
        "name": "Launch Go program with debug",
        "type": "go",
        "request": "launch",
        "program": "${workspaceRoot}/cmd/main/main.go",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "debugServer": "local",
        "sourceMaps": true,
        "dlvFlags": ["--check-go-version=false"]
    }]
}
